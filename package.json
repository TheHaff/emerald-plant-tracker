{
  "name": "emerald-plant-tracker",
  "version": "1.0.0",
  "description": "Cannabis plant growth tracking application",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel dev",
    "build": "pnpm --recursive build",
    "start": "pnpm --filter emerald-plant-tracker-backend start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "audit": "pnpm --recursive audit",
    "audit-fix": "pnpm --recursive audit --fix",
    "clean": "pnpm --recursive clean",
    "install:all": "pnpm install",
    "format": "prettier --write frontend/src"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "prettier": "^3.6.2"
  },
  "keywords": [
    "cannabis",
    "grow",
    "tracker",
    "plants"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.12.4",
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "arrowParens": "avoid"
  }
}
